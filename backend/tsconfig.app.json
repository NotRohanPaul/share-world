{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./.cache/ts/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "outDir": ".cache/ts",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "removeComments": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}