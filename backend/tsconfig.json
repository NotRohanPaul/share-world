{
  "compilerOptions": {
    "tsBuildInfoFile": "./.cache/ts/tsconfig.tsbuildinfo",
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "removeComments": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "index.d.ts",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
  }
}