{
  "version": "1.1.0",
  "name": "share-world-backend",
  "description": "Basic File Sharing with Authentication Backend",
  "type": "module",
  "private": true,
  "author": "RP",
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=11.3.0"
  },
  "scripts": {
    "clean": "[ ! -d dist ] || rm -rf dist",
    "cpy-pkg": "[ -d dist ] && cp package.json package-lock.json dist",
    "lint": "eslint .",
    "test": "vitest run",
    "tsc": "tsc -b --verbose",
    "tsc:src": "npm run clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && npm run cpy-pkg",
    "coverage": "vitest run --coverage",
    "bundle": "npm run clean && rollup -c",
    "build:ts": "npm run lint && npm run test && npm run tsc:src",
    "build:prod": "npm run lint && npm run tsc && node ./scripts/downlaod-mongodb-binary.mjs && npm run test && npm run bundle",
    "start:dev": "nodemon --watch src --ext ts,json --exec tsx --tsconfig ./tsconfig.app.json  --env-file=.env.development ./src/index.ts",
    "start:stage": "node --env-file=.env.staging ./dist/index.js",
    "render:build": "npm ci --include=dev && npm run bundle",
    "render:start": "node ./dist/index.js"
  },
  "dependencies": {
    "bcryptjs": "3.0.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.13.2",
    "pino": "9.7.0",
    "socket.io": "4.8.1",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "9.24.0",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "2.8.18",
    "@types/express": "5.0.1",
    "@types/jsonwebtoken": "9.0.9",
    "@types/node": "22.14.1",
    "@types/supertest": "6.0.3",
    "eslint": "9.31.0",
    "mongodb-memory-server": "10.1.4",
    "nodemon": "3.1.9",
    "pino-pretty": "13.0.0",
    "rollup": "4.41.0",
    "rollup-plugin-gzip": "4.0.1",
    "supertest": "7.1.1",
    "tsc-alias": "1.8.16",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.30.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.4"
  }
}