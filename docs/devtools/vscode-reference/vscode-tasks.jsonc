{
    "version": "2.0.0",
    "tasks": [
        // === BACKEND TASKS ===
        {
            "label": "MongoDB Windows",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-File",
                "./scripts/start-mongodb-server.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
            },
            "icon": {
                "id": "database",
                "color": "terminal.ansiBlue"
            },
        },
        {
            "label": "MongoDB Docker",
            "type": "shell",
            "command": "docker start -a mongo-server",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "icon": {
                "id": "database",
                "color": "terminal.ansiBlue"
            },
        },
        {
            "label": "Backend",
            "command": "npm run start:dev --prefix backend",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "icon": {
                "id": "server-environment",
                "color": "terminal.ansiMagenta"
            },
            "runOptions": {
                "instanceLimit": 1
            },
        },
        {
            "label": "Frontend",
            "command": "npm run start:dev --prefix frontend",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "icon": {
                "id": "device-desktop",
                "color": "terminal.ansiGreen"
            },
        },
        {
            "label": "Start All",
            "dependsOn": [
                "MongoDB Windows",
                "Backend",
                "Frontend"
            ],
            "dependsOrder": "parallel",
            "runOptions": {
                "runOn": "default"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        // === MobileTASKS ===
        {
            "label": "Start Emulator",
            "type": "shell",
            "command": "emulator -avd \"$(emulator -list-avds | head -n 1)\"",
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
        },
        {
            "label": "Open URL in Emulator",
            "type": "shell",
            "command": "adb wait-for-device && adb shell am start -a android.intent.action.VIEW -d \"https://10.0.2.2:5173\"",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
            },
        },
        {
            "label": "Mobile",
            "dependsOn": [
                "Start Emulator",
                "Open URL in Emulator"
            ],
            "dependsOrder": "parallel",
            "group": "build",
            "runOptions": {
                "instanceLimit": 1
            },
            "icon": {
                "id": "device-mobile",
                "color": "terminal.ansiRed"
            },
        }
    ]
}